{
  "name": "gitlab-activity-mcp",
  "version": "0.0.1",
  "description": "GitLab Activity MCP Server - Generate professional activity reports and analysis",
  "keywords": [
    "gitlab",
    "mcp",
    "activity",
    "report",
    "git",
    "analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BanShan-Alec/gitlab-activity-mcp-server.git"
  },
  "homepage": "https://github.com/BanShan-Alec/gitlab-activity-mcp-server#readme",
  "type": "module",
  "bin": {
    "gitlab-activity-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "dotenv -e .env.local -- node --inspect=9222 dist/index.js",
    "inspect": "dotenv -e .env.local -- mcp-inspector node --inspect=9222 dist/index.js",
    "format": "prettier --write './**/*.{css,ts,tsx,less,json,md,js,jsx}'",
    "prepublish": "npm run build",
    "pub": "npm publish --access=public"
  },
  "dependencies": {
    "lowdb": "^7.0.1",
    "mcp-framework": "^0.2.15",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@types/node": "^20.11.24",
    "dotenv-cli": "^7.4.1",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "packageManager": "pnpm@9.8.0"
}
